{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "esModuleInterop": true,
    "strictNullChecks": true,
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "rootDirs": ["src", "tests"],
    "baseUrl": "src",
    "outDir": "dist",
    "paths": {
      "@/*": ["*"],
      "@/tests/*": ["../tests/*"]
    },
    "resolveJsonModule": true,
    "types": ["node", "jest", "vite/client"]
  },
  "include": ["src", "tests", "src/main/config/.d.ts"],
  "exclude": ["node_modules", "dist"],
}